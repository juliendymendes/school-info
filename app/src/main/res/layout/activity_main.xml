<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/flavina"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nome_text_view"
        />

    <TextView
        android:id="@+id/nome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escola Profª Flavina Maria da Silva"
        android:textColor="#5A4B4B"
        android:textSize="36sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_image_view"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/descricao_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="18dp"
        android:text="Ee Prof Flavina Maria Da Silva é uma escola pública de Campo Grande/MS que oferece educação especial e ensino médio. Possui alimentação fornecida, laboratório de informática e quadras de esportes "
        android:textColor="#675B5B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nome_text_view"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/endereco_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R. Centro Oeste, 40 - Jd. Botafogo, Campo Grande - MS, 79070-060"
        android:textColor="#675B5B"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/descricao_text_view"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/telefone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(67) 3388-5177"
        android:textSize="16sp"
        android:textColor="#675B5B"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/endereco_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/horario_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aberto de segunda a sexta-feira - 07:00 às 17:30"
        android:textSize="13sp"
        android:textColor="#099B06"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/telefone_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>



</androidx.constraintlayout.widget.ConstraintLayout>